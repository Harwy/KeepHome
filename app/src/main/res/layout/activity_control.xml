<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="70dp"
    tools:context="com.shu.keephome.ControlActivity" >
    <TextView
        android:id="@+id/control_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="仅控制默认测试设备 device：5"/>
    <TextView
        android:id="@+id/control_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/control_text"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:text="灯"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/control_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/control_text1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:text=""
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/control_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/control_text2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:text="设备"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/control_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/control_text3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:text=""
        android:textSize="20sp"/>


    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/switchButton"
        style="@style/SwitchButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/control_text1"
        android:checked="false"
        app:kswAnimationDuration="300"
        app:kswBackDrawable="@drawable/ios_back_drawable"
        app:kswBackMeasureRatio="1.4"
        app:kswThumbDrawable="@drawable/ios_thumb_selector"
        app:kswThumbMarginBottom="-8dp"
        app:kswThumbMarginLeft="-5dp"
        app:kswThumbMarginRight="-5dp"
        app:kswThumbMarginTop="-2.5dp" />

    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/switchButton2"
        style="@style/SwitchButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/control_text3"
        android:checked="false"
        app:kswAnimationDuration="300"
        app:kswBackDrawable="@drawable/ios_back_drawable"
        app:kswBackMeasureRatio="1.4"
        app:kswThumbDrawable="@drawable/ios_thumb_selector"
        app:kswThumbMarginBottom="-8dp"
        app:kswThumbMarginLeft="-5dp"
        app:kswThumbMarginRight="-5dp"
        app:kswThumbMarginTop="-2.5dp" />


</RelativeLayout>